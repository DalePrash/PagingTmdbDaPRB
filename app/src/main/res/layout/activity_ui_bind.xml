<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.pagingtmdbdapr.service.bind.BindUIServiceActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewthreadCount"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:padding="5dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonThreadStarter"
        android:layout_below="@+id/textViewthreadCount"
        android:text="START"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStopthread"
        android:layout_below="@+id/buttonThreadStarter"
        android:layout_marginTop="10dp"
        android:text="STOP"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBindService"
        android:layout_below="@+id/buttonStopthread"
        android:text="BIND"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonUnBindService"
        android:layout_below="@+id/buttonBindService"
        android:text="UNBIND"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGetRandomNumber"
        android:layout_below="@+id/buttonUnBindService"
        android:text="GET NUMBER"
        android:layout_marginTop="10dp"/>


</RelativeLayout>